post_install() {
	rm -rf ${DESTDIR}/usr/share/hedgehog
	vmkdir /usr/share/hedgehog
	out_dir_path=$(cat target/out_dir_path)
	vcopy ${out_dir_path#/*/*/}/config/* /usr/share/hedgehog
	}
